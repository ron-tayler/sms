<link rel="stylesheet" href="/css/page_add_service.css">
<div class="container">
    <form action="/service/{{ id }}/edit" method="post">
        <label>
            Название: {{ name }}
        </label>
        <label>
            Страна: {{ country }}
        </label>
        <label>
            Цена:
            <input type="text" name="price" value="{{ price }}" />
            руб.
        </label>
        <button class="btn btn-blue" type="submit">Сохранить</button>
    </form>
</div>